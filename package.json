{
  "name": "parsers-playground",
  "version": "1.0.0",
  "description": "A playground for testing document parsers (DOCX, XLSX)",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "bin": {
    "parsers-cli": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist coverage",
    "cli": "node dist/cli.js",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "parser",
    "docx",
    "xlsx",
    "document",
    "extract",
    "text"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5",
    "commander": "^11.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}